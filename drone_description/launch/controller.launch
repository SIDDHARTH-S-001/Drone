<launch>

<rosparam file="$(find drone_description)/launch/controller.yaml" command="load"/>
<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="drone" args="Rev5_position_controller Rev6_position_controller Rev7_position_controller Rev8_position_controller Rev14_position_controller Rev15_position_controller joint_state_controller "/>
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
  <remap from="/joint_states" to="/drone/joint_states"/>
</node>

</launch>